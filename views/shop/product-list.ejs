<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="d-flex flex-wrap cards">
                        <% for (let product of prods) { %>
                            <div class="card m-2" style="width: 18rem;">
                                <h5 class="card-title fw-bold m-2"><%= product.title %></h5>                                
                                <img class="card-img" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                                <h6 class="text-center fw-bold mt-2">U$ <%= product.price %></h6>
                                <div class="card-body pt-0">                                    
                                    <p class="card-text"><%= product.description %></p>
                                    <div class="text-center">
                                        <a href="/products/<%= product._id %>" class="btn btn-primary">Details</a>
                                        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                    </div>                                   
                                  </div>                                
                            </div>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Products Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>